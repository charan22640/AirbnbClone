<%-  layout('layouts/boilerplate') %>
<div class="row mt-3" >
    <h1>Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control form-control-lg" placeholder="Enter Username" name="username" required> <!-- Larger input -->
                <div class="valid-feedback"> Looks good!</div>
                <div class="invalid-feedback">Enter a valid username</div>
            </div>
          
            
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control form-control-lg" placeholder="Enter password" name="password" required> <!-- Larger input -->

                <div class="invalid-feedback">Please Enter password</div>
            </div>
        <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>